{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".nuxt/**", ".output/**", "dist/**"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "check": {
      "outputs": [".nuxt/**"]
    },

    "lint": {},

    "lint:fix": {
      "cache": false
    },

    "test": {},

    "clean": {
      "cache": false
    }
  }
}
